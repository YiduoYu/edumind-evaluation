<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.edumind.mapper.StudentMapper">

    <select id="selectStudentById" parameterType="long" resultType="com.edumind.domain.Student">
        SELECT * FROM student WHERE id = #{id}
    </select>

    <select id="selectAllStudents" resultType="com.edumind.domain.Student">
        SELECT * FROM student
    </select>

    <select id="selectStudentByEmail" resultType="com.edumind.domain.Student">
        SELECT * FROM student WHERE email = #{email}
    </select>

    <insert id="insertStudent" parameterType="com.edumind.domain.Student">
        INSERT INTO student (name, age, email, create_time)
        VALUES (#{name}, #{age}, #{email}, #{createTime})
    </insert>

</mapper>